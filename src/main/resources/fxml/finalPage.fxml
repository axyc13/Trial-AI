<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.FinalPageController">
  <children>
    <AnchorPane prefHeight="599.0" prefWidth="789.0">
      <children>
        <Button fx:id="yesButton" alignment="CENTER" layoutX="296.0" layoutY="234.0" mnemonicParsing="false" onAction="#onYesClick" prefHeight="39.0" prefWidth="70.0" text="Yes">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
        <Button fx:id="noButton" layoutX="411.0" layoutY="234.0" mnemonicParsing="false" onAction="#onNoClick" prefHeight="39.0" prefWidth="70.0" text="No">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
        <Label layoutX="75.0" layoutY="55.0" text="Was the AI defendant Ethical or Not?">
          <font>
            <Font size="40.0" />
          </font>
        </Label>
        <Label fx:id="timer" layoutX="316.0" layoutY="150.0" prefHeight="95.0" prefWidth="230.0" text="00:10">
          <font>
            <Font size="50.0" />
          </font>
        </Label>
        <Label layoutX="191.0" layoutY="113.0" text="you have 60 seconds to decide">
          <font>
            <Font size="30.0" />
          </font>
        </Label>
            <Button layoutX="657.0" layoutY="519.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="102.0" text="Restart Game" />
            <TextArea layoutX="208.0" layoutY="308.0" prefHeight="146.0" prefWidth="336.0" />
            <Button layoutX="341.0" layoutY="463.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="70.0" text="Submit" />
            <Label alignment="CENTER" layoutX="296.0" layoutY="274.0" prefHeight="33.0" prefWidth="160.0" text="Briefly state why?">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
      </children>
    </AnchorPane>

    <VBox fx:id="overlay" alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.5);" visible="false">
      <Label style="-fx-text-fill: white; -fx-font-size: 36px;" text="Game Over! Time's up!" />
    </VBox>
    <VBox fx:id="overlaySuccess" alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.5);" visible="false">
      <Label style="-fx-text-fill: white; -fx-font-size: 36px;" text="Correct! Thanks for playing!" />
    </VBox>
    <VBox fx:id="overlayFailure" alignment="CENTER" style="-fx-background-color: rgba(0, 0, 0, 0.5);" visible="false">
      <Label style="-fx-text-fill: white; -fx-font-size: 36px;" text="Wrong! Thanks for playing!" />
    </VBox>
  </children>
</StackPane>
