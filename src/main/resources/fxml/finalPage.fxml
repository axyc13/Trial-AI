<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.FinalPageController">
  <children>
    <AnchorPane prefHeight="599.0" prefWidth="789.0">
      <children>
        <Button fx:id="yesButton" layoutX="229.0" layoutY="338.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="70.0" text="Yes" onAction="#onYesClick" />
        <Button fx:id="noButton" layoutX="469.0" layoutY="338.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="70.0" text="No" onAction="#onNoClick" />
        <Label layoutX="105.0" layoutY="107.0" text="Was the AI defendant Ethical or Not?">
          <font>
            <Font size="40.0" />
          </font>
        </Label>
        <Label fx:id="timer" layoutX="324.0" layoutY="199.0" prefHeight="95.0" prefWidth="230.0" text="00:10">
          <font>
            <Font size="50.0" />
          </font>
        </Label>
        <Label layoutX="197.0" layoutY="164.0" text="you have 10 seconds to decide">
          <font>
            <Font size="30.0" />
          </font>
        </Label>
      </children>
    </AnchorPane>

    <VBox fx:id="overlay" alignment="CENTER" visible="false" style="-fx-background-color: rgba(0, 0, 0, 0.5);">
      <Label text="Game Over! Time's up!" style="-fx-text-fill: white; -fx-font-size: 36px;" />
    </VBox>
    <VBox fx:id="overlaySucess" alignment="CENTER" visible="false" style="-fx-background-color: rgba(0, 0, 0, 0.5);">
      <Label text="Correct! Thanks for playing!" style="-fx-text-fill: white; -fx-font-size: 36px;" />
    </VBox>
    <VBox fx:id="overlayFailure" alignment="CENTER" visible="false" style="-fx-background-color: rgba(0, 0, 0, 0.5);">
      <Label text="Wrong! Thanks for playing!" style="-fx-text-fill: white; -fx-font-size: 36px;" />
    </VBox>
  </children>
</StackPane>
